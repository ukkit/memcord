{
  "mcpServers": {
    "memcord": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "{{MEMCORD_PATH}}",
        "run",
        "memcord"
      ],
      "env": {
        "PYTHONPATH": "{{MEMCORD_PATH}}/src",
        "MEMCORD_ENABLE_ADVANCED": "false"
      }
    },
    "memcord-advanced": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "{{MEMCORD_PATH}}",
        "run",
        "memcord"
      ],
      "env": {
        "PYTHONPATH": "{{MEMCORD_PATH}}/src",
        "MEMCORD_ENABLE_ADVANCED": "true"
      }
    }
  }
}
